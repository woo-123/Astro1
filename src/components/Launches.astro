---
import CardLaunch from './CardLaunch.astro'
import { getLatestLaunches } from '../services/spacex';


const docs = await getLatestLaunches()

---
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {docs.map(launch =><CardLaunch id={launch.id} img={launch.links.patch.small} details={launch.details} flightNumber={launch.flight_number} success={launch.success}>
        <img src={launch.links.patch.small} alt="">
        <h2>Launch #{launch.id}</h2>
    </CardLaunch>
    )}
</div>